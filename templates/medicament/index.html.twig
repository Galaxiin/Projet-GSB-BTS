{% extends 'base.html.twig' %}

{% block title %} Médicaments !{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3"> Ces médicaments sont fabriqués par nous !</h1>

    <div class="row">
        <table class="table table-hover">
        <thead>
            <tr class="table-dark">
            <th scope="col">DEPOT LEGAL</th>
            <th scope="col">NOM COMMERCIAL</th>
            <th scope="col">FAMILLE</th>
            <th scope="col"><a href=" {{ path('medicaments_create') }}" class="btn btn-success btn-sm">Creer un médicament</a></th>
            </tr>
        </thead>
        <tbody>
         
                {% for medicament in medicaments %}
                <tr class="table-light">
                
                    <td>{{medicament.MEDDepotLegal}}</td>
                    <td>{{medicament.MEDNomCommercial}}</td>  
                    <td>{{medicament.MEDFamille.FAMLibelle}}</td> 
                    <td>
                        <a href="{{ path('medicaments_edit', {'id': medicament.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>&nbsp;
                        <a href="{{ path('medicaments_delete', {'id': medicament.id}) }}" class="btn btn-danger"
                           onclick="return confirm(`Êtes vous sur de vouloir supprimer le médicament : {{medicament.MEDDepotLegal}} ?`)">
                        <i class="fas fa-trash"></i></a>
 
                    </td>
                {% endfor %}
                
                </tr>      
        </tbody>
        </table>
    </div>
</div>

{% endblock %}
