{% block _user_RolesUser_widget %}
    <p>Ici, vous pouvez ajouter vos rôles !</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-role" class="btn btn-primary">Ajouter un rôle</button>
    </div>
{% endblock %}

{% block _user_role_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _user_role_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.titre) }}
                    </div>
                </div>
            </div>    
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}